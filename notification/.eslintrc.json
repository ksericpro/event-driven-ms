{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "indent": [ "error", 2 ],
        "quotes": [ "error", "single" ],
        "semi": [ "error", "never" ],
        "no-trailing-spaces": [ "error", { "skipBlankLines": true } ],
        "no-useless-constructor": [ "off" ],
        "no-unused-vars": [ "error" ],
        "arrow-spacing": [ "error" ],
        "semi-spacing": [ "error" ],
        "space-infix-ops": [ "error" ],
        "space-before-blocks": [ "error" ],
        "comma-spacing": [ "error" ],
        "space-in-parens": [ "error" ],
        "key-spacing": [ "error" ],
        "@typescript-eslint/no-explicit-any": "off"
    }
}
